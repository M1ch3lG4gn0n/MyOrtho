<Window x:Class="MyOrthoClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MyOrtho" Height="916" Width="1137" xmlns:my="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:models="clr-namespace:MyOrthoClient.Models">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.DataContext>
            <models:ListVM />
        </Grid.DataContext>
        <my:Chart Name="activityChart"
           Width="400" Height="250"
           Background="LightSteelBlue" Margin="628,315,102.4,321.4">
            <my:Chart.Series>
                <my:LineSeries Title="Résultat"
            IndependentValueBinding="{Binding Path=Key}"
            DependentValueBinding="{Binding Path=Value}">
                </my:LineSeries>
            </my:Chart.Series>
        </my:Chart>
        <my:Chart x:Name="resultsChart"
                Width="400" Height="250"
                Background="LightSteelBlue" Margin="628,35,102.4,601.4">
            <my:LineSeries Title="Résultat"
                    IndependentValueBinding="{Binding Key}"
                    DependentValueBinding="{Binding Value}"/>
        </my:Chart>
        <Button x:Name="BtnImporter" Content="Importer" HorizontalAlignment="left" Margin="269,35,0,0" VerticalAlignment="Top" Width="100" Height="50"
                Click="BtnImporter_Click"/>
        <Button x:Name="BtnLire" Content="Lire" HorizontalAlignment="left" Margin="269,149,0,0" VerticalAlignment="Top" Width="100" Height="50"
                Click="BtnLire_Click"/>
        <Button x:Name="BtnArreter" Content="Arrêter" HorizontalAlignment="left" Margin="269,235,0,0" VerticalAlignment="Top" Width="100" Height="50"
                Click="BtnArreter_Click"/>
        <Button x:Name="BtnDemarrer" Content="Démarrer" HorizontalAlignment="left" Margin="433,35,0,0" VerticalAlignment="Top" Width="100" Height="50"
                Click="BtnDemarrer_Click"/>
        <ListView x:Name="ActivityList" HorizontalAlignment="Left" Height="582" Margin="10,10,0,0" VerticalAlignment="Top" Width="214" ItemsSource="{Binding ActivityList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
